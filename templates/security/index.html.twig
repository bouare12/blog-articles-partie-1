{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>

    {{ form_start(form) }}

        {{ form_row(form.username, {'label': "Nom d'utilisateur : ", 'attr': {
            'placeholder' : "Votre nom d'utilisateur ..."
        }}) }}
        {{ form_row(form.firstname, {'label': "Votre Prénom : ", 'attr': {
            'placeholder' : "Votre Prénom ..."
        }}) }}
        {{ form_row(form.lastname, {'label': "Votre Nom : ", 'attr': {
            'placeholder' : "Nom..."
        }}) }}
        {{ form_row(form.email, {'label': "Votre Mail : ", 'attr': {
            'placeholder' : "Votre Mail ..."
        }}) }}
        {{ form_row(form.password, {'label': "Votre Password : ", 'attr': {
            'placeholder' : "Votre Password ..."
        }}) }}
        {{ form_row(form.passwordConfirm, {'label': "Confirmez votre Password : ", 'attr': {
            'placeholder' : "Votre Prénom ..."
        }}) }}

        <button class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}

</div>
{% endblock %}
