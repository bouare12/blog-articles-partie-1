{% extends 'base.html.twig' %} {% block title %}Hello AccountController!{%
endblock %} {% block body %}

<div class="">
  {% if app.user %}
  <div>
    <h3>Hello {{ app.user.firstname }} {{ app.user.lastname }}</h3>
    <p>Bienvenue dans votre espace personnel</p>
  </div>
  <div>
    <ul>
      <li>
        <a href="{{ path('app_article_index') }}">Administrations des articles</a>
      </li>
    </ul>
  </div>
  {% endif %}
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        {% for article in articles %}
        <div class="col-md-4 mb-3">
          <img
            class="card-img-top"
            src="{{asset('images/articles/' ~ article.image)}}"
            alt="{{ article.title }}"
          />
          <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <a
              href="{{ path('show', { id: article.id }) }}"
              class="btn btn-primary"
              >En Savoir plus</a
            >
          </div>
          <div class="card-footer">
            <p class="date">
              Ecrit le {{ article.createdAt | date("d/m/y")  }} Ã 
              {{ article.createdAt | date("H:m") }} par
              <span class="author">{{ article.author }}</span>
            </p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
