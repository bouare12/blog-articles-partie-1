{% extends 'base.html.twig' %}

{% block title %} Acceuil! {% endblock %}

{% block body %}
<h1 class="title p-1 text-center">
    <H2>Bienvenue à la page d'Accueil de mon Blog </H2>
</h1>
    <div class="row">

        <div class="col-md-8">
            <div class="row">
                {% for article in articles %}
                <div class="col-md-4 mb-3">
                    <img class="card-img-top" src="{{asset('images/articles/' ~ article.image)}}" alt="{{ article.title }}">
                    <div class="card-body">
                        <h5 class="card-title"> {{article.title }}</h5>
                        <a href="{{path('show', {'id': article.id})}}" class="btn btn-primary">En Savoir plus</a>
                    </div>
                    <div class="card-footer">
                        <p class="date">Ecrit le {{ article.createdAt | date("d/m/y")  }} à {{ article.createdAt | date("H:m") }} par <span class="author">{{ article.author }}</span></p>
                    </div>
                </div>
            {% endfor %} 
            </div>
        </div>
        <div class="col-md-4">
            <h2>Catégories</h2>
            <ul class="list-group">
                {% for categorie in categories %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{path('show_Article', {'id': categorie.id})}}">{{ categorie.title }}
                            <span class="badge bg-primary rounded-pill">{{ categorie.articles | length }} article(s)</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
