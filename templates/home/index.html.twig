{% extends 'base.html.twig' %}

{% block title %} Acceuil! {% endblock %}

{% block body %}

    <p>
        <H2>Bienvenue à la page d'Acceuil</H2>
    </p>
    <div class="row">
        {% for article in articles %}
        <div class="row">
            {% for article in articles %}
            <div class="card col-md-4" style="width: 18rem;">
                <p class="date">Ecrit le {{ article.createdAt | date("d/m/y")  }} à {{ article.createdAt | date("H:m") }} par <span class="author">{{ article.author }}</span></p>
                <img src="{{asset('images/articles/' ~ article.image)}}" alt="{{ article.title }}">
                <div class="card-body">
                  <h5 class="card-title"> {{article.title }}</h5>
                  <a href="{{path('show', {'id': article.id})}}" class="btn btn-primary">En Savoir plus</a>
                </div>
              </div>
            {% endfor %}
        </div>    
        {% endfor %}
    </div>

{% endblock %}
